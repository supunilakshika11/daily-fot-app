<?xml version="1.0" encoding="utf-8"?>
<!--
    File: edit_button_background.xml
    Location: app/src/main/res/drawable/edit_button_background.xml

    WHAT THIS DOES:
    Creates the blue rounded background for the "Edit Info" button
    Makes the button look professional with rounded corners
-->
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Blue background color (matches design) -->
    <solid android:color="#4A90E2" />

    <!-- Rounded corners (24dp makes it very rounded) -->
    <corners android:radius="24dp" />

</shape>