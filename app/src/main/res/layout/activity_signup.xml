<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#D7CFCF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="center_horizontal">

        <!-- App Logo -->
        <ImageView
            android:id="@+id/logo_image"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="32dp"
            android:src="@mipmap/ic_launcher"
            android:contentDescription="Daily FOT Logo" />

        <!-- Username Label -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Username"
            android:textSize="20sp"
            android:textStyle="normal"
            android:fontFamily="sans-serif"
            android:textColor="#000000"
            android:layout_marginBottom="8dp"
            android:gravity="center" />

        <!-- Username Input -->
        <EditText
            android:id="@+id/username_input"
            android:layout_width="284dp"
            android:layout_height="41dp"
            android:layout_marginBottom="16dp"
            android:hint="Enter a Username"
            android:textColorHint="#737373"
            android:textColor="#000000"
            android:textSize="14sp"
            android:fontFamily="sans-serif"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:background="@drawable/input_field_background_spec"
            android:inputType="text"
            android:maxLines="1"
            android:gravity="start|center_vertical" />

        <!-- E-mail Label -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="E-mail"
            android:textSize="20sp"
            android:textStyle="normal"
            android:fontFamily="sans-serif"
            android:textColor="#000000"
            android:layout_marginBottom="8dp"
            android:gravity="center" />

        <!-- E-mail Input -->
        <EditText
            android:id="@+id/email_input"
            android:layout_width="284dp"
            android:layout_height="41dp"
            android:layout_marginBottom="16dp"
            android:hint="Enter your E-mail"
            android:textColorHint="#737373"
            android:textColor="#000000"
            android:textSize="14sp"
            android:fontFamily="sans-serif"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:background="@drawable/input_field_background_spec"
            android:inputType="textEmailAddress"
            android:maxLines="1"
            android:gravity="start|center_vertical" />

        <!-- Password Label -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Password"
            android:textSize="20sp"
            android:textStyle="normal"
            android:fontFamily="sans-serif"
            android:textColor="#000000"
            android:layout_marginBottom="8dp"
            android:gravity="center" />

        <!-- Password Input Container -->
        <RelativeLayout
            android:layout_width="284dp"
            android:layout_height="41dp"
            android:layout_marginBottom="16dp">

            <EditText
                android:id="@+id/password_input"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="Enter your password"
                android:textColorHint="#737373"
                android:textColor="#000000"
                android:textSize="14sp"
                android:fontFamily="sans-serif"
                android:paddingStart="16dp"
                android:paddingEnd="50dp"
                android:background="@drawable/input_field_background_spec"
                android:inputType="textPassword"
                android:maxLines="1"
                android:gravity="start|center_vertical" />

            <ImageView
                android:id="@+id/password_toggle"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="16dp"
                android:src="@drawable/ic_eye_off_spec"
                android:contentDescription="Toggle password visibility"
                android:clickable="true"
                android:focusable="true" />

        </RelativeLayout>

        <!-- Reenter Password Label -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Reenter Password"
            android:textSize="20sp"
            android:textStyle="normal"
            android:fontFamily="sans-serif"
            android:textColor="#000000"
            android:layout_marginBottom="8dp"
            android:gravity="center" />

        <!-- Reenter Password Input Container -->
        <RelativeLayout
            android:layout_width="284dp"
            android:layout_height="41dp"
            android:layout_marginBottom="32dp">

            <EditText
                android:id="@+id/reenter_password_input"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="Enter your Password Again"
                android:textColorHint="#737373"
                android:textColor="#000000"
                android:textSize="14sp"
                android:fontFamily="sans-serif"
                android:paddingStart="16dp"
                android:paddingEnd="50dp"
                android:background="@drawable/input_field_background_spec"
                android:inputType="textPassword"
                android:maxLines="1"
                android:gravity="start|center_vertical" />

            <ImageView
                android:id="@+id/reenter_password_toggle"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="16dp"
                android:src="@drawable/ic_eye_off_spec"
                android:contentDescription="Toggle password visibility"
                android:clickable="true"
                android:focusable="true" />

        </RelativeLayout>

        <!-- Sign Up Button -->
        <Button
            android:id="@+id/signup_button"
            android:layout_width="281dp"
            android:layout_height="40dp"
            android:layout_marginBottom="24dp"
            android:text="Sign Up"
            android:textColor="#000000"
            android:textSize="16sp"
            android:fontFamily="sans-serif"
            android:background="@drawable/login_button_background_spec"
            android:textAllCaps="false" />

        <!-- Login Link -->
        <TextView
            android:id="@+id/login_link"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Already have an account? Login"
            android:textSize="14sp"
            android:textColor="#000000"
            android:fontFamily="sans-serif"
            android:clickable="true"
            android:focusable="true" />

        <ProgressBar
            android:id="@+id/progress_bar"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="center"
            android:visibility="gone" />

    </LinearLayout>

</ScrollView>