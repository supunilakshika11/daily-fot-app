<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Top Header Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:gravity="center_vertical">

            <!-- Back Arrow (Hidden but kept for code compatibility) -->
            <ImageView
                android:id="@+id/back_arrow"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_arrow_back"
                android:contentDescription="Back"
                android:clickable="true"
                android:focusable="true" />

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />

            <!-- User Profile Icon -->
            <ImageView
                android:id="@+id/user_profile_icon"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_user_profile"
                android:contentDescription="User Profile"
                android:layout_marginEnd="8dp"
                android:clickable="true"
                android:focusable="true" />

            <!-- Notification Icon -->
            <ImageView
                android:id="@+id/notification_icon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_notification"
                android:contentDescription="Notifications"
                android:clickable="true"
                android:focusable="true" />

        </LinearLayout>

        <!-- Event Title -->
        <TextView
            android:id="@+id/event_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Noor Feast Event"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:fontFamily="sans-serif"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingBottom="16dp" />

        <!-- Event Image with Rounded Corners -->
        <RelativeLayout
            android:layout_width="368dp"
            android:layout_height="236dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="16dp"
            android:background="@drawable/news_card_rounded_corner"
            android:clipToOutline="true">

            <!-- Background Image with Rounded Corners -->
            <ImageView
                android:id="@+id/event_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/one"
                android:scaleType="centerCrop" />

            <!-- Dark Overlay for better text readability -->
            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#40000000" />

            <!-- Date Badge -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#80FFFFFF"
                android:padding="8dp"
                android:layout_margin="16dp">

                <TextView
                    android:id="@+id/date_day"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="29"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:gravity="center" />

                <TextView
                    android:id="@+id/date_month"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="APR"
                    android:textSize="10sp"
                    android:textColor="#000000"
                    android:gravity="center" />

                <TextView
                    android:id="@+id/date_year"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2025"
                    android:textSize="10sp"
                    android:textColor="#000000"
                    android:gravity="center" />

            </LinearLayout>

            <!-- Event Title on Image -->
            <TextView
                android:id="@+id/event_title_on_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Title\ngoes\nhere"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:fontFamily="sans-serif"
                android:shadowColor="#000000"
                android:shadowDx="2"
                android:shadowDy="2"
                android:shadowRadius="4"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="16dp"
                android:layout_marginBottom="16dp" />

        </RelativeLayout>

        <!-- Like and Time Section -->
        <LinearLayout
            android:layout_width="368dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingBottom="16dp"
            android:gravity="center_vertical">

            <!-- Like Section -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/like_button"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_heart"
                    android:contentDescription="Like"
                    android:clickable="true"
                    android:focusable="true" />

                <TextView
                    android:id="@+id/like_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="40"
                    android:textSize="14sp"
                    android:textColor="#000000"
                    android:fontFamily="sans-serif"
                    android:layout_marginStart="8dp" />

            </LinearLayout>

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />

            <!-- Time Section -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/time_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="21"
                    android:textSize="14sp"
                    android:textColor="#000000"
                    android:fontFamily="sans-serif"
                    android:layout_marginEnd="8dp" />

                <ImageView
                    android:id="@+id/time_icon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_time"
                    android:contentDescription="Time" />

            </LinearLayout>

        </LinearLayout>

        <!-- Divider -->
        <View
            android:layout_width="368dp"
            android:layout_height="1dp"
            android:layout_gravity="center_horizontal"
            android:background="#E0E0E0"
            android:layout_marginBottom="16dp" />

        <!-- Event Headline -->
        <TextView
            android:id="@+id/event_headline"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Noor Feast Event â€“ Blessed Celebration"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:fontFamily="sans-serif"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingBottom="16dp" />

        <!-- Event Description -->
        <TextView
            android:id="@+id/event_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="A blessed celebration of tradition and community bringing together flavors, culture, and joy in a magnificent feast. Join us for an evening of traditional cuisine and cultural heritage."
            android:textSize="16sp"
            android:textColor="#000000"
            android:fontFamily="sans-serif"
            android:lineSpacingExtra="4dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingBottom="16dp" />

        <!-- Caption and Design Credits -->
        <TextView
            android:id="@+id/event_credits"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Caption by : Cultural Committee\nDesign by : Event Design Team"
            android:textSize="14sp"
            android:textColor="#666666"
            android:fontFamily="sans-serif"
            android:lineSpacingExtra="2dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingBottom="32dp" />

    </LinearLayout>

</ScrollView>